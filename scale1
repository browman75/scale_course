    }

    function checkQ4() {
      let val = document.getElementById('q4').value;
      let fb = document.getElementById('f4');
      if (val==='Î¼m') fb.textContent = "âœ” æ­£ç¢ºï¼é ­é«®ç›´å¾‘ç´„ 60 å¾®ç±³";
      else fb.textContent = "âœ˜ å†æƒ³æƒ³ï¼";
