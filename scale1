  <script>
    let current = 1;
    function showPage(n) {
      document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
      document.getElementById('page'+n).classList.add('active');
    }
    function nextPage() { if(current<6){ current++; showPage(current);} }
    function prevPage() { if(current>1){ current--; showPage(current);} }

    function checkAnswer(btn, ans) {
      let fb = btn.parentElement.querySelector('.feedback');
      if (ans === '0.1mm' && btn.textContent.includes('0.1 æ¯«ç±³')) fb.textContent = "âœ” æ­£ç¢ºï¼è‚‰çœ¼æ¥µé™ç´„ 0.1mm";
      else if (ans === 'é‰¤ç‹€çµæ§‹' && btn.textContent.includes('ç¾½æ')) fb.textContent = "âœ” æ­£ç¢ºï¼ç¾½æ¯›æœ‰é‰¤ç‹€çµæ§‹";
      else if (ans === 'ç´°èŒ' && btn.textContent.includes('ç´°èŒ')) fb.textContent = "âœ” æ­£ç¢ºï¼ç´°èŒæ¯”ç—…æ¯’å¤§";
      else fb.textContent = "âœ˜ å†æƒ³æƒ³çœ‹ï¼";
    }

    function checkQ2() {
      let a = document.getElementById('q2a').value;
      let b = document.getElementById('q2b').value;
      let fb = document.getElementById('f2');
      if (a==='è‚‰çœ¼' && b==='é¡¯å¾®é¡') fb.textContent = "âœ” æ­£ç¢ºï¼";
